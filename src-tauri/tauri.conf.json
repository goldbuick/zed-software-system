{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "zed-cafe",
  "version": "0.1.0",
  "identifier": "cafe.zed.zss",
  "build": {
    "frontendDist": "../cafe/dist",
    "devUrl": "http://localhost:7777",
    "beforeDevCommand": "yarn tauri:web",
    "beforeBuildCommand": "yarn build"
  },
  "app": {
    "windows": [
      {
        "title": "zed.cafe",
        "maximized": true,
        "resizable": true,
        "fullscreen": false,
        "backgroundThrottling": "disabled",
        "acceptFirstMouse": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}