{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@zss/gadget": ["libs/gadget/src/index.ts"],
      "@zss/network/*": ["libs/network/src/*"],
      "@zss/system/*": ["libs/system/src/*"],
      "@zss/yjs/*": ["libs/yjs/src/*"]
    },
    "types": ["vite/client"]
  },
  "exclude": ["node_modules", "tmp"]
}
